<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">



    <TextView
        android:id="@+id/textView_helper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Recent:"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />

    <com.cooltechworks.creditcarddesign.CreditCardView
        android:id="@+id/card_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:card_number="XXXXXXXXXXXXXX"
        app:card_holder_name="JOANA SMITH"
        app:cvv="522"
        app:card_expiration="01/17"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textView_helper"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/button2"
        android:background="@drawable/button_join_shape_selected"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_below="@id/card_5"
        android:layout_centerHorizontal="true"
        android:text="Scan new"
        android:textColor="#FFFFFF"
        />


</RelativeLayout>